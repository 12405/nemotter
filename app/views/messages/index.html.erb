<%= paginate(@messages) %>
  <% @messages.each do |message| %>
  <div class="article">
    <div class="detail">
      タグ:<%= message.tag %>
    </div>
    <div class="comment"><p>
      <%= truncate(message.body, length:160) do %><%= link_to '全文表示', message %><% end %>
    </p></div>
    <div class="posted_date">
      <%= message.created_at.in_time_zone('Tokyo') %>
    </div>
  </div>
  <!--<%= link_to 'Edit', edit_message_path(message) %> -->
  <% end %>

